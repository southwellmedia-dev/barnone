---
import Layout from "../layouts/Layout.astro";
import { Navigation } from "../components/Navigation";
import { SubpageHero } from "../components/layouts/SubpageHero";
import { Footer } from "../components/Footer";
import { ActionButton } from "../components/ui/ActionButton";
import { Award, Shield, Users, Target, CheckCircle2, Star, Quote } from "lucide-react";
import heroBg from "../assets/photos/571114222_122218302566109155_5635964258491913720_n.jpg?url";
import teamPhoto from "../assets/photos/488642929_122192708912109155_1419170129794126114_n.jpg?url";
---

<Layout title="About Us | Bar None Coatings">
  <Navigation client:load />
  <main>
    <SubpageHero
      client:load
      title="About Us"
      subtitle="Veteran-owned excellence. Industrial-grade craftsmanship. No compromises."
      breadcrumb={[
        { label: "Home", href: "/" },
        { label: "About Us", href: "/about" },
      ]}
      backgroundImage={heroBg}
    />

    <!-- Mission Section -->
    <section class="py-24 bg-background relative overflow-hidden">
      <!-- Subtle grid -->
      <div
        class="absolute inset-0 opacity-[0.02]"
        style="background-image: radial-gradient(var(--brand-blue) 1px, transparent 1px); background-size: 24px 24px;"
      />

      <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="grid grid-cols-1 lg:grid-cols-2 gap-16 items-center">
          <!-- Left: Image Block -->
          <div class="relative">
            <div class="absolute -inset-4 bg-brand-blue transform skew-x-3 rounded-sm opacity-20"></div>
            <div class="relative bg-background p-3 shadow-2xl transform -skew-x-3 border border-border">
              <div class="overflow-hidden">
                <img
                  src={teamPhoto}
                  alt="Bar None Coatings Team"
                  class="w-full h-[400px] object-cover transform skew-x-3 scale-110"
                />
              </div>
            </div>
            <!-- Floating Badge -->
            <div class="absolute -bottom-6 -right-6 bg-brand-red text-white p-6 transform -skew-x-6 shadow-xl">
              <div class="transform skew-x-6 text-center">
                <Award class="w-8 h-8 mx-auto mb-2" />
                <span class="font-heading text-2xl italic block">Veteran</span>
                <span class="font-tech text-xs uppercase tracking-widest">Owned & Operated</span>
              </div>
            </div>
          </div>

          <!-- Right: Content -->
          <div>
            <div class="flex items-center gap-2 text-brand-red font-tech font-bold mb-4 uppercase tracking-widest text-sm">
              <div class="w-8 h-1 bg-brand-red"></div>
              <span>Our Story</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-heading italic uppercase text-foreground leading-[0.95] mb-8">
              Built on Service. <br />
              <span class="text-brand-blue">Driven by Excellence.</span>
            </h2>
            <div class="space-y-6 font-tech text-muted leading-relaxed">
              <p>
                Bar None Coatings was founded with a simple mission: deliver industrial-grade
                floor coatings with the same precision, discipline, and commitment to excellence
                that defines military service.
              </p>
              <p>
                As a veteran-owned business, we bring that ethos to every project. Whether it's
                a residential garage or a 50,000 sq ft warehouse, we approach each job with the
                same meticulous attention to detail and unwavering commitment to quality.
              </p>
              <p>
                We don't cut corners. We don't compromise on materials. We deliver results that
                stand the test of time—because that's the only standard worth having.
              </p>
            </div>
            <div class="mt-10">
              <ActionButton href="/quote" client:load>
                Start Your Project
              </ActionButton>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Owner Section -->
    <section class="py-24 bg-surface relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <div class="grid grid-cols-1 lg:grid-cols-5 gap-12 lg:gap-16 items-center">
          <!-- Left: Owner Info (3 cols) -->
          <div class="lg:col-span-3 order-2 lg:order-1">
            <div class="flex items-center gap-2 text-brand-blue font-tech font-bold mb-4 uppercase tracking-widest text-sm">
              <div class="w-8 h-1 bg-brand-blue"></div>
              <span>Meet the Owner</span>
            </div>
            <h2 class="text-4xl md:text-5xl font-heading italic uppercase text-foreground leading-[0.95] mb-6">
              Nicholas Fink
            </h2>
            <p class="font-tech text-brand-red uppercase tracking-widest text-sm font-bold mb-8">
              Founder & Owner
            </p>

            <div class="space-y-5 font-tech text-muted leading-relaxed">
              <p>
                Nicholas Fink founded Bar None Coatings with a vision to bring military-grade precision
                and unwavering integrity to the flooring industry. As a proud veteran, Nicholas brings
                the discipline, attention to detail, and commitment to excellence that defined his service
                to every project Bar None takes on.
              </p>
              <p>
                With hands-on experience in industrial coatings and a passion for delivering results
                that exceed expectations, Nicholas personally oversees operations to ensure every
                client receives the quality and service they deserve. His philosophy is simple:
                do it right the first time, every time.
              </p>
            </div>

            <!-- Quote -->
            <div class="mt-10 relative">
              <div class="absolute -left-4 top-0 bottom-0 w-1 bg-brand-red"></div>
              <div class="pl-6">
                <Quote class="w-8 h-8 text-brand-red/30 mb-3" />
                <blockquote class="font-heading text-2xl md:text-3xl italic text-foreground leading-snug">
                  "Our name is our promise. We deliver results that are second to none—bar none."
                </blockquote>
                <cite class="font-tech text-sm text-muted mt-4 block not-italic">
                  — Nicholas Fink, Founder
                </cite>
              </div>
            </div>
          </div>

          <!-- Right: Image (2 cols) -->
          <div class="lg:col-span-2 order-1 lg:order-2">
            <div class="relative">
              <!-- Background accent -->
              <div class="absolute -inset-3 bg-brand-blue transform -skew-x-6 opacity-20"></div>
              <!-- Image container -->
              <div class="relative bg-background p-2 border border-border shadow-xl">
                <div class="aspect-[3/4] bg-gradient-to-br from-brand-black to-brand-black/80 flex items-center justify-center">
                  <!-- Placeholder for owner photo -->
                  <div class="text-center p-8">
                    <div class="w-32 h-32 mx-auto bg-brand-blue/20 rounded-full flex items-center justify-center mb-6">
                      <span class="font-heading text-5xl italic text-brand-blue">NF</span>
                    </div>
                    <span class="font-tech text-white/40 text-sm uppercase tracking-widest">Owner Photo</span>
                  </div>
                </div>
              </div>
              <!-- Veteran badge -->
              <div class="absolute -bottom-4 -left-4 bg-brand-red text-white px-6 py-3 transform -skew-x-6 shadow-lg">
                <div class="transform skew-x-6 flex items-center gap-2">
                  <Award class="w-5 h-5" />
                  <span class="font-tech text-xs uppercase tracking-widest font-bold">Veteran</span>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Values Section -->
    <section class="py-24 bg-brand-black text-white relative overflow-hidden">
      <div class="absolute inset-0 opacity-5 bg-[radial-gradient(#ffffff_1px,transparent_1px)] [background-size:20px_20px]"></div>

      <div class="max-w-7xl mx-auto px-6 relative z-10">
        <div class="text-center mb-16">
          <div class="flex items-center justify-center gap-2 text-brand-red font-tech font-bold mb-4 uppercase tracking-widest text-sm">
            <div class="w-8 h-1 bg-brand-red"></div>
            <span>Core Values</span>
            <div class="w-8 h-1 bg-brand-red"></div>
          </div>
          <h2 class="text-4xl md:text-5xl font-heading italic uppercase">
            What We Stand For
          </h2>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
          {[
            {
              icon: Shield,
              title: "Integrity",
              desc: "Honest pricing, transparent processes, and standing behind every job we complete."
            },
            {
              icon: Target,
              title: "Precision",
              desc: "Military-grade attention to detail in every step from prep to final cure."
            },
            {
              icon: Users,
              title: "Service",
              desc: "Customer satisfaction isn't a goal—it's the standard. Period."
            },
            {
              icon: Star,
              title: "Excellence",
              desc: "We use only premium materials and proven techniques. No shortcuts."
            }
          ].map((value, i) => (
            <div class="group bg-white/5 border border-white/10 p-8 hover:bg-white/10 hover:border-brand-red transition-all duration-300">
              <div class="w-14 h-14 bg-brand-blue/20 flex items-center justify-center mb-6 transform -skew-x-6 group-hover:bg-brand-red/30 transition-colors">
                <value.icon class="w-7 h-7 text-brand-blue transform skew-x-6 group-hover:text-brand-red transition-colors" />
              </div>
              <h3 class="font-heading text-2xl italic uppercase mb-3">{value.title}</h3>
              <p class="font-tech text-white/60 text-sm leading-relaxed">{value.desc}</p>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- Why Choose Us -->
    <section class="py-24 bg-surface relative overflow-hidden">
      <div class="max-w-7xl mx-auto px-6">
        <!-- Section Header -->
        <div class="text-center mb-16">
          <div class="flex items-center justify-center gap-2 text-brand-red font-tech font-bold mb-4 uppercase tracking-widest text-sm">
            <div class="w-8 h-1 bg-brand-red"></div>
            <span>Why Bar None</span>
            <div class="w-8 h-1 bg-brand-red"></div>
          </div>
          <h2 class="text-4xl md:text-5xl font-heading italic uppercase text-foreground leading-[0.95]">
            The Bar None <span class="text-brand-red">Difference</span>
          </h2>
        </div>

        <!-- Three Column Features -->
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
          {[
            {
              title: "Veteran Values",
              items: ["100% Veteran-owned & operated", "Military-grade precision", "Discipline in every detail"],
              accent: "brand-blue"
            },
            {
              title: "Premium Quality",
              items: ["Industrial-grade materials only", "Comprehensive surface prep", "No shortcuts, no compromises"],
              accent: "brand-red"
            },
            {
              title: "Peace of Mind",
              items: ["Licensed & fully insured", "Serving TX, OK, and AR", "Satisfaction guaranteed"],
              accent: "brand-blue"
            }
          ].map((col, i) => (
            <div class="relative">
              <div class={`absolute top-0 left-0 w-full h-1 bg-${col.accent}`}></div>
              <div class="bg-background border border-border p-8 pt-10">
                <h3 class="font-heading text-2xl italic uppercase text-foreground mb-6">{col.title}</h3>
                <ul class="space-y-4">
                  {col.items.map((item) => (
                    <li class="flex items-center gap-3 font-tech text-muted">
                      <div class={`w-2 h-2 bg-${col.accent} transform rotate-45 flex-shrink-0`}></div>
                      {item}
                    </li>
                  ))}
                </ul>
              </div>
            </div>
          ))}
        </div>

        <!-- Bottom Stats Bar -->
        <div class="mt-16 grid grid-cols-2 md:grid-cols-4 gap-px bg-border">
          {[
            { value: "5-Star", label: "Customer Rating" },
            { value: "100%", label: "Satisfaction Rate" },
            { value: "3 States", label: "Service Area" },
            { value: "Fully", label: "Licensed & Insured" }
          ].map((stat) => (
            <div class="bg-background p-6 md:p-8 text-center">
              <div class="font-heading text-3xl md:text-4xl italic text-brand-blue mb-1">
                {stat.value}
              </div>
              <div class="font-tech text-xs uppercase tracking-widest text-muted">
                {stat.label}
              </div>
            </div>
          ))}
        </div>
      </div>
    </section>

    <!-- CTA Section -->
    <section class="py-20 bg-brand-blue relative overflow-hidden">
      <div class="absolute inset-0 opacity-10">
        <div class="absolute top-0 left-0 w-full h-full bg-[linear-gradient(45deg,transparent_25%,rgba(255,255,255,0.1)_25%,rgba(255,255,255,0.1)_50%,transparent_50%,transparent_75%,rgba(255,255,255,0.1)_75%)] bg-[length:60px_60px]"></div>
      </div>

      <div class="max-w-4xl mx-auto px-6 text-center relative z-10">
        <h2 class="text-4xl md:text-5xl font-heading italic uppercase text-white mb-6">
          Ready to Work With Us?
        </h2>
        <p class="font-tech text-white/80 text-lg mb-10 max-w-2xl mx-auto">
          Get a free, no-obligation quote for your project. We'll assess your space and
          provide a detailed proposal within 24 hours.
        </p>
        <a
          href="/quote"
          class="inline-flex items-center gap-3 bg-white text-brand-blue px-10 py-4 font-heading italic uppercase text-lg transform -skew-x-12 hover:bg-brand-red hover:text-white transition-colors shadow-xl"
        >
          <span class="transform skew-x-12">Get Free Quote</span>
        </a>
      </div>
    </section>
  </main>
  <Footer />
</Layout>
